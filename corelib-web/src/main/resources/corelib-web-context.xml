<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
	">

	<!-- USING OTHER MODULES -->
	<import resource="corelib-definitions-context.xml" />
	<import resource="corelib-logging-context.xml" />

	<!-- INTERNAL DEFINITIONS -->
	<import resource="internal/corelib-web-email.xml" />
	<import resource="internal/corelib-web-contentreuseframework.xml" />
	

	<!-- CONFIGURATION -->
	<bean id="europeana_configuration" class="eu.europeana.corelib.web.support.Configuration" />

	<!-- SERVICES -->
	<bean id="corelib_web_europeanaUrlService" class="eu.europeana.corelib.web.service.impl.EuropeanaUrlServiceImpl" />

	<bean id="corelib_web_emailService" class="eu.europeana.corelib.web.service.impl.EmailServiceImpl">
		<lookup-method name="createEmailBuilder" bean="corelib_web_emailBuilder"/>
	</bean>

	<bean id="corelib_web_wikipediaApiService" class="eu.europeana.corelib.web.service.impl.WikipediaApiServiceImpl" />

	<bean id="corelib_web_MicrosoftTranslatorService" class="eu.europeana.corelib.web.service.impl.MicrosoftTranslatorServiceImpl" />

	<bean id="corelib_web_SoundCloudApiService" class="eu.europeana.corelib.web.service.impl.SoundCloudApiServiceImpl" />

    <bean id="corelib_web_MediaStorageService" class="eu.europeana.corelib.web.service.impl.MediaStorageServiceImpl" />

	<!-- INTERCEPTORS -->
	<bean id="corelib_web_configInterceptor" class="eu.europeana.corelib.web.interceptor.ConfigInterceptor" />

	<!-- OTHERS -->
	<bean id="corelib_web_MediaServiceFactory" class="eu.europeana.corelib.web.model.mediaservice.MediaServiceFactory" />

	<bean id="corelib_web_swiftProvider" class="eu.europeana.corelib.web.swift.SwiftProvider">
		<constructor-arg value="#{europeanaProperties['swift.authUrl']}" type="java.lang.String"/>
		<constructor-arg value="#{europeanaProperties['swift.username']}" type="java.lang.String"/>
		<constructor-arg value="#{europeanaProperties['swift.password']}" type="java.lang.String"/>
		<constructor-arg value="#{europeanaProperties['swift.containerName']}" type="java.lang.String"/>
		<constructor-arg value="#{europeanaProperties['swift.regionName']}" type="java.lang.String"/>
		<constructor-arg value="#{europeanaProperties['swift.tenantName']}" type="java.lang.String"/>
	</bean>
</beans>
